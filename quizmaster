function resetAttempts() {
  const passcode = prompt("Enter teacher passcode to reset attempts:");
  if (passcode === "300480") {
    localStorage.removeItem("quizAttempts");
    alert("✅ Attempts counter has been reset!");
  } else if (passcode !== null) {
    alert("❌ Incorrect passcode.");
  }
}

